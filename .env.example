# MinIO object storage
MINIO_USER=clipfeed
MINIO_PASSWORD=changeme_strong_password_here

# JWT signing key â€” generate with: openssl rand -base64 32
JWT_SECRET=changeme_generate_with_openssl

# Storage management
STORAGE_LIMIT_GB=50
CLIP_TTL_DAYS=30

# Worker settings (tune to your NAS hardware)
MAX_WORKERS=4
WHISPER_MODEL=medium

# Score updater interval (seconds)
SCORE_UPDATE_INTERVAL=900

# LLM provider (default local Ollama)
# Options: ollama, openai, anthropic
LLM_PROVIDER=ollama
# For hosted providers, set base URL (examples: https://api.openai.com/v1, https://api.anthropic.com/v1)
LLM_BASE_URL=
# For hosted providers, set API key
LLM_API_KEY=
# Optional provider-specific fallback keys (used when LLM_API_KEY is empty)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# Anthropic API version header (when LLM_PROVIDER=anthropic)
ANTHROPIC_VERSION=2023-06-01
# Preferred model name for any provider
LLM_MODEL=
# Optional legacy/local Ollama settings
OLLAMA_MODEL=llama3.2:3b
